{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MergeJsonOutput",
  "description": "JSON output for merge command",
  "type": "object",
  "required": [
    "dialect",
    "dry_run",
    "input_dir",
    "options",
    "statistics",
    "tables"
  ],
  "properties": {
    "dialect": {
      "type": "string"
    },
    "dry_run": {
      "type": "boolean"
    },
    "input_dir": {
      "type": "string"
    },
    "options": {
      "$ref": "#/definitions/MergeOptions"
    },
    "output_file": {
      "type": ["string", "null"]
    },
    "statistics": {
      "$ref": "#/definitions/MergeStatistics"
    },
    "tables": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "definitions": {
    "MergeOptions": {
      "type": "object",
      "required": ["header", "transaction"],
      "properties": {
        "header": {
          "type": "boolean"
        },
        "transaction": {
          "type": "boolean"
        }
      }
    },
    "MergeStatistics": {
      "type": "object",
      "required": ["bytes_written", "elapsed_secs", "tables_merged"],
      "properties": {
        "bytes_written": {
          "type": "integer",
          "minimum": 0.0
        },
        "elapsed_secs": {
          "type": "number"
        },
        "tables_merged": {
          "type": "integer",
          "minimum": 0.0
        },
        "throughput_kb_per_sec": {
          "type": ["number", "null"]
        }
      }
    }
  }
}
