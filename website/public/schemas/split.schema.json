{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SplitJsonOutput",
  "description": "JSON output for single file split",
  "type": "object",
  "required": [
    "dialect",
    "dry_run",
    "input_file",
    "output_dir",
    "statistics",
    "tables"
  ],
  "properties": {
    "compression": {
      "type": ["string", "null"]
    },
    "dialect": {
      "type": "string"
    },
    "dialect_confidence": {
      "type": ["string", "null"]
    },
    "dry_run": {
      "type": "boolean"
    },
    "input_file": {
      "type": "string"
    },
    "output_dir": {
      "type": "string"
    },
    "statistics": {
      "$ref": "#/definitions/SplitStatistics"
    },
    "tables": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "definitions": {
    "SplitStatistics": {
      "type": "object",
      "required": [
        "bytes_processed",
        "elapsed_secs",
        "statements_processed",
        "tables_found"
      ],
      "properties": {
        "bytes_processed": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "elapsed_secs": {
          "type": "number",
          "format": "double"
        },
        "statements_processed": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "tables_found": {
          "type": "integer",
          "format": "uint",
          "minimum": 0.0
        },
        "throughput_mb_per_sec": {
          "type": ["number", "null"],
          "format": "double"
        }
      }
    }
  }
}
