{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ErdJson",
  "description": "JSON representation of the ERD",
  "type": "object",
  "required": ["relationships", "stats", "tables"],
  "properties": {
    "relationships": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/RelationshipJson"
      }
    },
    "stats": {
      "$ref": "#/definitions/ErdStats"
    },
    "tables": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/TableJson"
      }
    }
  },
  "definitions": {
    "ColumnJson": {
      "description": "JSON representation of a column",
      "type": "object",
      "required": [
        "is_foreign_key",
        "is_nullable",
        "is_primary_key",
        "name",
        "type"
      ],
      "properties": {
        "is_foreign_key": {
          "type": "boolean"
        },
        "is_nullable": {
          "type": "boolean"
        },
        "is_primary_key": {
          "type": "boolean"
        },
        "name": {
          "type": "string"
        },
        "references_column": {
          "type": ["string", "null"]
        },
        "references_table": {
          "type": ["string", "null"]
        },
        "type": {
          "type": "string"
        }
      }
    },
    "ErdStats": {
      "description": "ERD statistics",
      "type": "object",
      "required": ["column_count", "relationship_count", "table_count"],
      "properties": {
        "column_count": {
          "type": "integer",
          "minimum": 0.0
        },
        "relationship_count": {
          "type": "integer",
          "minimum": 0.0
        },
        "table_count": {
          "type": "integer",
          "minimum": 0.0
        }
      }
    },
    "RelationshipJson": {
      "description": "JSON representation of a relationship",
      "type": "object",
      "required": [
        "cardinality",
        "from_column",
        "from_table",
        "to_column",
        "to_table"
      ],
      "properties": {
        "cardinality": {
          "type": "string"
        },
        "from_column": {
          "type": "string"
        },
        "from_table": {
          "type": "string"
        },
        "to_column": {
          "type": "string"
        },
        "to_table": {
          "type": "string"
        }
      }
    },
    "TableJson": {
      "description": "JSON representation of a table with full column details",
      "type": "object",
      "required": ["columns", "name"],
      "properties": {
        "columns": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ColumnJson"
          }
        },
        "name": {
          "type": "string"
        }
      }
    }
  }
}
