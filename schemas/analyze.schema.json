{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Analyze Command Output",
  "description": "JSON output from sql-splitter analyze --json",
  "type": "object",
  "required": ["input_file", "dialect", "size_mb", "elapsed_secs", "summary", "tables"],
  "properties": {
    "input_file": { "type": "string" },
    "dialect": { "type": "string", "enum": ["mysql", "postgres", "sqlite", "mssql"] },
    "size_mb": { "type": "number" },
    "elapsed_secs": { "type": "number" },
    "summary": {
      "type": "object",
      "required": ["total_tables", "total_inserts", "total_bytes"],
      "properties": {
        "total_tables": { "type": "integer", "minimum": 0 },
        "total_inserts": { "type": "integer", "minimum": 0 },
        "total_bytes": { "type": "integer", "minimum": 0 }
      }
    },
    "tables": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "inserts", "creates", "statements", "bytes", "size_mb"],
        "properties": {
          "name": { "type": "string" },
          "inserts": { "type": "integer", "minimum": 0 },
          "creates": { "type": "integer", "minimum": 0 },
          "statements": { "type": "integer", "minimum": 0 },
          "bytes": { "type": "integer", "minimum": 0 },
          "size_mb": { "type": "number", "minimum": 0 }
        }
      }
    }
  }
}
