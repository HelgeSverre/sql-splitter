{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ValidationSummary",
  "description": "Validation summary with collected issues",
  "type": "object",
  "required": ["checks", "dialect", "issues", "summary"],
  "properties": {
    "checks": {
      "$ref": "#/definitions/CheckResults"
    },
    "dialect": {
      "type": "string"
    },
    "issues": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ValidationIssue"
      }
    },
    "summary": {
      "$ref": "#/definitions/SummaryStats"
    }
  },
  "definitions": {
    "CheckResults": {
      "type": "object",
      "required": [
        "ddl_dml_consistency",
        "encoding",
        "fk_integrity",
        "pk_duplicates",
        "syntax"
      ],
      "properties": {
        "ddl_dml_consistency": {
          "$ref": "#/definitions/CheckStatus"
        },
        "encoding": {
          "$ref": "#/definitions/CheckStatus"
        },
        "fk_integrity": {
          "$ref": "#/definitions/CheckStatus"
        },
        "pk_duplicates": {
          "$ref": "#/definitions/CheckStatus"
        },
        "syntax": {
          "$ref": "#/definitions/CheckStatus"
        }
      }
    },
    "CheckStatus": {
      "oneOf": [
        {
          "type": "string",
          "enum": ["ok"]
        },
        {
          "type": "object",
          "required": ["failed"],
          "properties": {
            "failed": {
              "type": "integer",
              "minimum": 0.0
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["skipped"],
          "properties": {
            "skipped": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "Location": {
      "description": "Location in the SQL dump where an issue was found",
      "type": "object",
      "properties": {
        "approx_line": {
          "type": ["integer", "null"],
          "minimum": 0.0
        },
        "statement_index": {
          "type": ["integer", "null"],
          "minimum": 0.0
        },
        "table": {
          "type": ["string", "null"]
        }
      }
    },
    "Severity": {
      "description": "Issue severity level",
      "type": "string",
      "enum": ["error", "warning", "info"]
    },
    "SummaryStats": {
      "type": "object",
      "required": [
        "errors",
        "info",
        "statements_scanned",
        "tables_scanned",
        "warnings"
      ],
      "properties": {
        "errors": {
          "type": "integer",
          "minimum": 0.0
        },
        "info": {
          "type": "integer",
          "minimum": 0.0
        },
        "statements_scanned": {
          "type": "integer",
          "minimum": 0.0
        },
        "tables_scanned": {
          "type": "integer",
          "minimum": 0.0
        },
        "warnings": {
          "type": "integer",
          "minimum": 0.0
        }
      }
    },
    "ValidationIssue": {
      "description": "A validation issue found in the SQL dump",
      "type": "object",
      "required": ["code", "message", "severity"],
      "properties": {
        "code": {
          "type": "string"
        },
        "location": {
          "anyOf": [
            {
              "$ref": "#/definitions/Location"
            },
            {
              "type": "null"
            }
          ]
        },
        "message": {
          "type": "string"
        },
        "severity": {
          "$ref": "#/definitions/Severity"
        }
      }
    }
  }
}
