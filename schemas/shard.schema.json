{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ShardJsonOutput",
  "description": "JSON output for single-tenant shard command",
  "type": "object",
  "required": [
    "dialect",
    "dry_run",
    "input_file",
    "statistics",
    "tables",
    "tenant"
  ],
  "properties": {
    "dialect": {
      "type": "string"
    },
    "dry_run": {
      "type": "boolean"
    },
    "input_file": {
      "type": "string"
    },
    "output_file": {
      "type": ["string", "null"]
    },
    "statistics": {
      "$ref": "#/definitions/ShardStatistics"
    },
    "tables": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/TableShardJson"
      }
    },
    "tenant": {
      "$ref": "#/definitions/TenantInfo"
    },
    "warnings": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "definitions": {
    "ShardStatistics": {
      "type": "object",
      "required": [
        "fk_orphans_skipped",
        "reduction_percent",
        "rows_selected",
        "rows_total",
        "tables_processed",
        "tables_skipped",
        "tables_with_data"
      ],
      "properties": {
        "fk_orphans_skipped": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "reduction_percent": {
          "type": "number",
          "format": "double"
        },
        "rows_selected": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "rows_total": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "tables_processed": {
          "type": "integer",
          "format": "uint",
          "minimum": 0.0
        },
        "tables_skipped": {
          "type": "integer",
          "format": "uint",
          "minimum": 0.0
        },
        "tables_with_data": {
          "type": "integer",
          "format": "uint",
          "minimum": 0.0
        }
      }
    },
    "TableShardJson": {
      "type": "object",
      "required": ["classification", "name", "rows_selected", "rows_total"],
      "properties": {
        "classification": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "rows_selected": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "rows_total": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        }
      }
    },
    "TenantInfo": {
      "type": "object",
      "required": ["auto_detected", "column", "value"],
      "properties": {
        "auto_detected": {
          "type": "boolean"
        },
        "column": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      }
    }
  }
}
